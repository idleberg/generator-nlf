{
  "name": "generator-nlf",
  "version": "0.2.0",
  "description": "Yeoman generator for NSIS Language Files (.nlf)",
  "author": "Jan T. Sott",
  "license": "MIT",
  "keywords": [
    "yeoman-generator",
    "nsis",
    "nlf",
    "nullsoft"
  ],
  "files": [
    "generators"
  ],
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:ejs": "ejslint generators/**/*.ejs",
    "lint:js": "eslint ./generators/**/*.js --ignore-path .gitignore",
    "prepare": "husky install",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/generator-nlf"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@nsis/language-data": "^0.9.0",
    "pascal-case": "^3.1.2",
    "update-notifier": "^3.0.1",
    "yeoman-generator": "^5.7.0"
  },
  "devDependencies": {
    "ejs-lint": "^2.0.0",
    "eslint": "^8.26.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.2"
  },
  "lint-staged": {
    "*.ejs": "ejslint",
    "*.(js|json)": "eslint --cache --fix"
  }
}
